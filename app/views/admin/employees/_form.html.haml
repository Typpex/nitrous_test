= form_for([:admin, @employee], html: { class: "form-horizontal"}) do |f|  
  - if @employee.errors.any?
    #error_explanation
      %h2= pluralize(@employee.errors.count, "error")
      -@employee.errors.full_messages.each do |message|
        = message
  .form-group
    =f.label :name, class: "col-sm-2 control-label"
    .col-sm-6
      =f.text_field :name, class: "form-control"
  .form-group  
    =f.label :licence, class: "col-sm-2 control-label"
    .col-sm-6
      =f.text_field :licence, class: "form-control"
  .form-group  
    =f.label :sexual_orientation, class: "col-sm-2 control-label"
    .col-sm-6
      =select_tag :sexual_orientation, options_for_select([ "straight","bi-sexual", "etc.." ], "Sexual orientation"), class: "form-control", name: "employee[sexual_orientation]"
  .form-group  
    =f.label :birthday, class: "col-sm-2 control-label"
    .col-sm-6
      =f.date_select :birthday,  {order: [:day, :month, :year], start_year: 1900, end_year: 2000}, {class: "form-control"}
  .form-group  
    =f.label :address, class: "col-sm-2 control-label"
    .col-sm-6
      =f.text_area :address, cols: 57
  %br
  .actions
    .form-group
      .col-sm-offset-2.col-sm-10
        = f.submit "Submit", class: "btn btn-default"
    
